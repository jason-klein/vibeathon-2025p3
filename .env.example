# ========================================
# APPLICATION SETTINGS
# ========================================

# Application name displayed throughout the UI
APP_NAME=ReferHarmony

# Environment: local, staging, or production
APP_ENV=local

# Application key (generate with: php artisan key:generate)
APP_KEY=

# Debug mode - MUST be false in production for security
APP_DEBUG=true

# Application URL (include port if not standard 80/443)
APP_URL=http://localhost

# Port for local development server (php artisan serve)
APP_PORT=8000

# Localization settings
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance mode driver
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP CLI server workers for local development
PHP_CLI_SERVER_WORKERS=4

# Password hashing rounds (higher = more secure but slower)
BCRYPT_ROUNDS=12

# ========================================
# LOGGING
# ========================================

# Main log channel (stack, single, daily, production, slack, syslog, errorlog)
# Use 'production' for production environments (daily rotation + optional Slack alerts)
LOG_CHANNEL=stack

# Stack channels to use (comma-separated)
LOG_STACK=single

# Channel for deprecation warnings
LOG_DEPRECATIONS_CHANNEL=null

# Minimum log level (debug, info, notice, warning, error, critical, alert, emergency)
# Production should use 'error' or 'warning'
LOG_LEVEL=debug

# Daily log retention (number of days to keep logs)
LOG_DAILY_DAYS=14

# Slack webhook for error notifications (optional, for production)
# LOG_SLACK_WEBHOOK_URL=
# LOG_SLACK_USERNAME="ReferHarmony Alerts"
# LOG_SLACK_EMOJI=":warning:"

# ========================================
# DATABASE
# ========================================

# Database connection type (sqlite, mysql, pgsql)
DB_CONNECTION=sqlite

# MySQL/PostgreSQL settings (uncomment if not using SQLite)
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=referharmony
# DB_USERNAME=root
# DB_PASSWORD=

# ========================================
# SESSION & CACHE
# ========================================

# Session driver (file, cookie, database, memcached, redis)
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Cache store (file, database, memcached, redis)
CACHE_STORE=database
# CACHE_PREFIX=

# ========================================
# QUEUE & BROADCASTING
# ========================================

# Broadcast connection (pusher, ably, redis, log, null)
BROADCAST_CONNECTION=log

# Queue connection (sync, database, beanstalkd, sqs, redis)
QUEUE_CONNECTION=database

# ========================================
# FILE STORAGE
# ========================================

# Filesystem disk (local, public, s3)
# Use 's3' in production for scalability
FILESYSTEM_DISK=local

# AWS S3 configuration (required if FILESYSTEM_DISK=s3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ========================================
# REDIS (optional)
# ========================================

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ========================================
# MEMCACHED (optional)
# ========================================

MEMCACHED_HOST=127.0.0.1

# ========================================
# MAIL
# ========================================

# Mail driver (smtp, sendmail, mailgun, ses, postmark, log)
# Use 'log' for local development, configure SMTP/service for production
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null

# Default "from" address for all emails
# IMPORTANT: Update this for production!
MAIL_FROM_ADDRESS="noreply@referharmony.com"
MAIL_FROM_NAME="${APP_NAME}"

# Mailgun configuration (if using mailgun)
# MAILGUN_DOMAIN=
# MAILGUN_SECRET=
# MAILGUN_ENDPOINT=api.mailgun.net

# Postmark configuration (if using postmark)
# POSTMARK_TOKEN=

# AWS SES configuration (if using ses)
# AWS_ACCESS_KEY_ID= (same as above in AWS section)
# AWS_SECRET_ACCESS_KEY= (same as above in AWS section)
# AWS_DEFAULT_REGION= (same as above in AWS section)

# ========================================
# THIRD-PARTY SERVICES
# ========================================

# OpenAI API key (required for AI summary generation)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# ========================================
# FRONTEND BUILD
# ========================================

# Application name for Vite
VITE_APP_NAME="${APP_NAME}"

# ========================================
# PRODUCTION DEPLOYMENT NOTES
# ========================================
# 1. Set APP_ENV=production
# 2. Set APP_DEBUG=false
# 3. Set LOG_LEVEL=error or warning
# 4. Configure proper MAIL_* settings for password resets
# 5. Generate new APP_KEY with: php artisan key:generate
# 6. Consider using FILESYSTEM_DISK=s3 for file uploads
# 7. Set CACHE_STORE and SESSION_DRIVER to redis for better performance
# 8. Configure proper APP_URL with your domain
# 9. Set up OPENAI_API_KEY for AI features
# 10. Run: php artisan config:cache after deployment
